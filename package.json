{
  "name": "pdf-studio",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:build": "npm-run-all electron:ts electron:rename",
    "electron:ts": "tsc electron/main.ts electron/preload.ts --outDir electron --module commonjs --esModuleInterop",
    "electron:rename": "node electron/rename-cjs.cjs",
    "electron:dev": "npm run electron:build && cross-env VITE_DEV_SERVER_URL=http://localhost:6005 electron .",
    "start": "concurrently -k \"npm:dev\" \"npm:electron:dev\"",
    "lint": "echo \"Add your linter here\""
  },
  "build": {
    "appId": "com.yourcompany.pdfstudio",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.46.2",
    "dexie": "^4.0.8",
    "file-type": "^19.2.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.7.76",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^7.1.2",
    "vite-plugin-static-copy": "^3.1.1"
  }
}
